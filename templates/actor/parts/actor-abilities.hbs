<div class="actor-abilities">
  <div class="abilities-tab-content">
    <!-- Sub-tab navigation for abilities -->
    <nav class="abilities-sub-tabs" data-group="abilities-sub-tabs">
      <a class="sub-tab active" data-tab="primary" title="{{localize 'FFXIV.Abilities.Primary'}}">
        {{localize 'FFXIV.Abilities.Primary'}}
        <div class="chip"></div>
      </a>
      <a class="sub-tab" data-tab="secondary" title="{{localize 'FFXIV.Abilities.Secondary'}}">
        {{localize 'FFXIV.Abilities.Secondary'}}
        <div class="chip"></div>
      </a>
      <br/>
      <a class="sub-tab" data-tab="instant" title="{{localize 'FFXIV.Abilities.Instant'}}">
        {{localize 'FFXIV.Abilities.Instant'}}
        <div class="chip"></div>
      </a>
      <a class="sub-tab" data-tab="traits" title="{{localize 'FFXIV.Abilities.Trait'}}">
        {{localize 'FFXIV.Abilities.Traits'}}
        <div class="chip"></div>
      </a>
    </nav>

    <!-- Sub-tab content -->
    <section class="sub-tab-content active" data-tab="primary">
      {{!-- Primary abilities content here --}}

      {{#each (reverse items)}}
        {{#if (eq type "primary_ability")}}
          {{> "systems/ffxiv/templates/actor/parts/actor-card-abilities.hbs" this}}
        {{/if}}
      {{/each}}
    </section>

    <section class="sub-tab-content" data-tab="secondary" style="display:none;">
      {{!-- Secondary abilities content here --}}
      {{#each (reverse items)}}
        {{#if (eq type "secondary_ability")}}
          {{> "systems/ffxiv/templates/actor/parts/actor-card-abilities.hbs" this}}
        {{/if}}
      {{/each}}
    </section>

    <section class="sub-tab-content" data-tab="instant" style="display:none;">
      {{!-- Instant abilities content here --}}
      {{#each (reverse items)}}
        {{#if (eq type "instant_ability")}}
          {{> "systems/ffxiv/templates/actor/parts/actor-card-abilities.hbs" this}}
        {{/if}}
      {{/each}}
    </section>

    <section class="sub-tab-content" data-tab="traits" style="display:none;">
      {{#each (reverse items)}}
        {{#if (eq type "limit_break")}}
          {{> "systems/ffxiv/templates/actor/parts/actor-card-limitbreak.hbs" this}}
        {{/if}}
        {{#if (eq type "trait")}}
          {{> "systems/ffxiv/templates/actor/parts/actor-card-traits.hbs" this}}
        {{/if}}
      {{/each}}
    </section>
  </div>





</div>
